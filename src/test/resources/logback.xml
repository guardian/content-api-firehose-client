<configuration>
    <contextName>firehose-client-test</contextName>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %-5level %logger - %msg%n%xException{30}</pattern>
        </encoder>
    </appender>

    <logger name="com.gu.contentapi.firehose" level="debug"/>
    <logger name="software.amazon.kinesis" level="debug"/>
    <logger name="software.amazon.awssdk" level="debug"/>
    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>